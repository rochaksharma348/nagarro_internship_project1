<%- include("partials/header") %>
<link rel="stylesheet" href="/css/main.css">
</head>
<body>

    <div class="container">
        <div class="row">
            
            <%- include("./partials/navbar") %>

            <div class="mainSectionContainer col-10 col-md-8 col-lg-6">
                <div class="titleContainer">

                    <%- include('./partials/modal') %>

                    <h1><%=payload.user.firstName%></h1>
                    </div>
                <!-- add here   -->
               
                
                <div class="profileHeaderContainer">
                    <div class="coverPhotoSection">
                        <div class="coverPhotoContainer">
                           
                        </div>
                        <div class="userImageContainer">
                            <img src="/images/profilePic.jpeg" alt="User profile image">
                           
                        </div>
                    </div>
                    <div class="profileButtonsContainer"></div>
                    <div class="userDetailsContainer">
                        <span class="displayName"><%=payload.user.firstName%> <%=payload.user.lastName%></span>
                        <span class="username">@<%=payload.user.username%></span>
                        <span class="description"></span>
                        <div class="followersContainer">
                            <a href="/profile/<%=payload.user.username%>/following">
                                <span class="value">0</span>
                                <span>Following</span>
                            </a>
                            <a href="/profile/<%=payload.user.username%>/followers">
                                <span class="value" id="followersValue">0</span>
                                <span>Followers</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="tabsContainer">
                    <a class="tab postsClass" href="/profile/<%=payload.user.username%>">
                        <span>Posts</span>
                    </a>
                    <a class="tab repliesClass" href="/profile/<%=payload.user.username%>/replies">
                        <span>Replies</span>
                    </a>
                </div>
                <div class="pinnedPostContainer" style="display: none;"></div>
                
            <!--   -->

                <div class="userPostsContainer">
                    
                </div>
                   
            </div>
        </div>

            
            <div hidden id="userId"><%= payload.user.id %></div>
            <div hidden id="onlyReplies"><%= payload.onlyReplies %></div>

            <div>
                <div class="postsContainer"></div>
            </div>

        </div>
        <!-- <div class="d-none d-md-block col-md-2 col-lg-4">Third div</div> -->
    </div>

    <script src="/js/jquery.js"></script>
    <script type="module" src="/js/profile-handler.js"></script>

<%- include('./partials/footer') %>